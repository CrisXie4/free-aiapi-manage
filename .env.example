# 服务器配置
NODE_ENV=production
PORT=3000

# MySQL 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=free_ai_api_control

# 管理员账户配置（从 NAME 和 PASSWD 环境变量读取）
NAME=admin
PASSWD=your_secure_password_here

# Session 配置
SESSION_SECRET=your-secret-key-change-in-production

# 数据文件路径（可选，默认使用智能检测）
# DATA_FILE_PATH=/path/to/data.json

# 日志配置
LOG_LEVEL=info

# HTTPS 配置（生产环境建议启用）
# USE_HTTPS=true

# API 请求超时时间（毫秒）
API_TIMEOUT=15000
